{
  "manifest_version": 2,

  "name": "Secure Messenger",
  "description": "You can send encrypted messages with your custom encryption key to your friends.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "background",
    "identity"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "main.html"
  }
}